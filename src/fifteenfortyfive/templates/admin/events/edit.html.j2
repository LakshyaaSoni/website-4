{% extends "layouts/main.html.j2" %}

{% block main %}
  <div class="container">
    <main class="content">
      <section class="section">
        <h1 class="title">Edit Event</h1>

        <form method="POST" action="/admin/events/{{event.id}}/update">
          {% include "admin/events/_form.html.j2" %}

          <div class="field is-grouped">
            <div class="control">
              <input type="submit" value="Update Event" class="button is-link">
            </div>
            <div class="control">
              <a href="/events" class="button is-text">Cancel</a>
            </div>
          </div>
        </form>
      </section>
    </main>
  </div>
{% endblock %}
