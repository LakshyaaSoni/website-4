{% extends "layouts/main.html.j2" %}

{% block main %}
  <div class="container">
    <main class="content">
      <section class="section">
        <h1 class="title">Users</h1>

        <table class="table is-fullwidth">
          <thead>
            <tr>
              <th>Name</th>
              <th>Twitter</th>
              <th>Twitch</th>
              <th>Since</th>
            </tr>
          </thead>

          <tbody>
            {% for account in accounts %}
              <tr>
                <td>
                  <span class="has-margin-right-sm">{{account.id}}</span>
                  <strong><a href="/accounts/{{account.id}}">{{account.username}}</a></strong>
                  <br/>
                  {{account.discord_username | safe}}#{{account.discord_discriminator}}
                </td>
                <td>{{account.twitter}}</td>
                <td>{{account.twitch}}</td>
                <td>{{account.created_at | strftime("%F %T") }}</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </section>
    </main>
  </div>
{% endblock %}
