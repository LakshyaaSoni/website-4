{% extends "layouts/main.html.j2" %}

{% block title %}
  {{ event.name }} | The 1545
{% endblock %}

{% block main %}
  <div class="container">
    <main class="content">
      <section class="section">
        <div class="columns">
          <div class="column is-4">
            <div class="card">
              <div class="card-header">
                <p class="card-header-title">
                  <a class="icon">
                    <i class="fas fa-exclamation"></i>
                  </a>
                  Important Info
                </p>
              </div>

              <div class="card-content">
                <p>
                  <strong>Signups Open:</strong>
                  <br/>
                  <span class="js-date-string js-localized">
                    {{ event.signups_open_time | strftime("%s") }}
                  </span>
                </p>
                <p>
                  <strong>Signups Close:</strong>
                  <br/>
                  <span class="js-date-string js-localized">
                    {{ event.signups_closed_time | strftime("%s") }}
                  </span>
                </p>
                <p>
                  <strong>Runners Announced:</strong>
                  <br/>
                  <span class="js-date-string js-localized">
                    {{ event.runners_announced_time | strftime("%s") }}
                  </span>
                </p>
                <p>
                  <strong>Starts:</strong>
                  <br/>
                  <span class="js-date-string js-localized">
                    {{ event.start_time | strftime("%s") }}
                  </span>
                </p>
                <p>
                  <strong>Ends:</strong>
                  <br/>
                  <span class="js-date-string js-localized">
                    {{ event.end_time | strftime("%s") }}
                  </span>
                </p>
              </div>

              <div class="card-footer">
                <div class="card-footer-item">
                  <strong>{{ event.runs | count }}</strong>&nbsp;Runs Submitted
                </div>
                <div class="card-footer-button is-danger">
                  Submit a Run!
                </div>
              </div>
            </div>
          </div>

          <div class="column is-8">
            <h1 class="title">{{event.name}}</h1>

            <p>
              {{event.description}}
            </p>
          </div>
        </div>
      </section>
    </main>
  </div>
{% endblock %}
